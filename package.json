{
    "name": "vscode-stocks",
    "displayName": "Stocks",
    "description": "Watch stock prices from the VS Code status bar",
    "version": "0.0.3",
    "publisher": "roblourens",
    "repository": {
        "type": "git",
        "url": "https://github.com/roblourens/vscode-stocks"
    },
    "bugs": {
        "url": "https://github.com/roblourens/vscode-stocks/issues"
    },
    "engines": {
        "vscode": "^1.15.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/src/extension",
    "icon": "images/icon.png",
    "contributes": {
        "configuration": {
            "properties": {
                "vscode-stocks.stockSymbols": {
                    "type": "array",
                    "default": [],
                    "description": "The list of stock symbols to display in the status bar"
                },
                "vscode-stocks.useColors": {
                    "type": "boolean",
                    "default": false,
                    "description": "If true, highlights items red when they're down and green when they're up."
                },
                "vscode-stocks.showPercent": {
                    "type": "boolean",
                    "default": false,
                    "description": "If true, shows the percentage the stock has moved up or down"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.41",
        "@types/node": "^8.0.20",
        "https": "^1.0.0",
        "mocha": "^3.5.0",
        "typescript": "^2.4.2",
        "vscode": "^1.1.4"
    }
}
